@{
    ViewData["Title"] = "Edit";
}

    <h1>
        Betaling
    </h1>

    <div class="row">
        <div class="col-12">
            <div class="text-center">
                U heeft betaald voor de film. Hieronder uw code om naar binnen te gaan.
                <img src-="https://kreuze.nl/wp-content/uploads/2019/08/QR-code.jpeg" class="w-100" style="height:200px;" />
